{
  "name": "otes",
  "version": "0.2.0",
  "description": "Simple and straightforward test framerwork for Java- and TypeScript applications.",
  "main": "build/api.js",
  "bin": {
    "otes": "./build/cli/cli.js"
  },
  "scripts": {
    "compile": "npx tsc --project ./tsconfig.debug.json",
    "compile:watch": "npm run compile -- --watch",
    "build": "rm -rf ./build/ && npx tsc --project ./tsconfig.build.json && chmod 755 ./build/cli/cli.js",
    "lint": "npx eslint --ext .ts --fix ./src",
    "metatest": "./scripts/metatest.sh",
    "test": "npm run metatest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t-ski/otes.git"
  },
  "author": "Thassilo Martin Schiepanski",
  "bugs": {
    "url": "https://github.com/t-ski/otes/issues"
  },
  "homepage": "https://github.com/t-ski/otes#readme",
  "devDependencies": {
    "@types/node": "^16.11.39",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^7.26.0",
    "eslint-plugin-typescript": "^0.14.0",
    "typescript": "^4.5.2"
  }
}
