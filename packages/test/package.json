{
    "name": "@rapidjs.org/test",
    "version": "0.1.0",
    "description": "Simple and straightforward test framerwork for Java- and TypeScript applications.",
    "author": "Thassilo Martin Schiepanski",
	"homepage": "https://github.com/rapidjs-org/test#readme",
    "keywords": [
        "test",
        "test-framework"
    ],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/rapidjs-org/test.git"
	},
	"bugs": {
		"url": "https://github.com/rapidjs-org/test/issues"
	},
	"main": "./build/api.js",
	"bin": {
		"rjs-test": "./build/cli/cli.js"
	},
    "types": "./types/api.d.ts",
    "files": [
        "./build/",
        "./types/",
        "./template/",
        "./help.txt",
        "./help.gen.txt"
    ],
    "scripts": {
        "debug": "npx tsc --project ./tsconfig.debug.json",
        "debug:watch": "npm run debug -- --watch",
        "build": "rm -rf ./build/ && rm -rf ./types/ && npx tsc --project ./tsconfig.build.json"
    },
    "devDependencies": {
        "@types/node": "^20.10.6",
        "typescript": "^5.3.3"
    }
}